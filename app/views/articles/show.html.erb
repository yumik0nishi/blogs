<h1>ブログ詳細ページ</h1>

    <h2 class="text-center">タイトル： <%= @article.title %><h2>
    <h4 class="text-right"><%= @article.created_at.strftime("%Y-%m-%d %H:%M") %></h4>
    <h3 class="text-left"><%= safe_join(@article.content.split("\n"), tag(:br)) %></h3>

<% if current_user == @article.user %>
  <%= link_to 'このブログを編集する', edit_article_path(@article), class: 'btn btn-light' %>
  <%= link_to 'このブログを削除する', @article, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } , class: 'btn btn-danger' %>
<% end %>